<?xml version="1.0" encoding="utf-8"?>
<manifest package="de.miroit.deis"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="de.miroit.deis.DEISApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ff_b"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.miroit.deis.MenuActivity"
            android:theme="@style/AppTheme.ActionBar"/>
        <activity
            android:name="de.miroit.deis.ErrorActivity"
            android:theme="@style/AppTheme.StartScreen"/>
        <activity
            android:name="de.miroit.deis.PDFnewActivity_"
            android:theme="@style/AppTheme.ActionBar"/>
        <activity
            android:name="de.miroit.deis.StartActivity"
            android:theme="@style/AppTheme.StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="de.miroit.deis.ImpressActivity"
                  android:theme="@style/AppTheme.ActionBar">
        </activity>
    </application>

</manifest>