<?xml version="1.0" encoding="utf-8"?>
<de.feuerwehraumuehle.feuerwehrapp.view.SquareView android:id="@+id/category_container"
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
        android:id="@+id/category_type"
        android:layout_width="14sp"
        android:layout_height="14sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/gradient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"/>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:alpha="1"
            android:src="@drawable/gradient"/>

        <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Beispieltext fÃ¼r langen Eintrag"
            android:textSize="20sp"/>

    </LinearLayout>
</de.feuerwehraumuehle.feuerwehrapp.view.SquareView>