<?xml version="1.0" encoding="utf-8"?>
<de.feuerwehraumuehle.feuerwehrapp.view.SquareView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:padding="20dp">

        <ImageView
            android:id="@+id/category_type"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="0.7"
            android:src="@mipmap/ic_folder_black_48dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:alpha="1"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingBottom="30dp"
                android:layout_above="@+id/category_name"
                android:src="@drawable/ic_home_white_48dp" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:text="adsfasdfasdf"
                android:textSize="25dp" />


        </RelativeLayout>
    </RelativeLayout>


</de.feuerwehraumuehle.feuerwehrapp.view.SquareView>